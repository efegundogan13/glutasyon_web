{
  "expo": {
    "name": "Glutasyon",
    "slug": "glutasyon-mobile",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/icon-1024.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon-1024.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.glutasyon.mobile",
      "buildNumber": "9",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Glutasyon, yakınınızdaki glütensiz restoranları göstermek için konumunuzu kullanır.",
        "NSCameraUsageDescription": "Tarif ve restoran fotoğrafları eklemek için kameraya erişim gereklidir.",
        "NSPhotoLibraryUsageDescription": "Galerinizden fotoğraf seçmek için erişim gereklidir.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "googleMapsApiKey": "YOUR_IOS_API_KEY"
      }
    },
    "android": {
      "package": "com.glutasyon.mobile",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_ANDROID_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/icon-512.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Glutasyon, yakınınızdaki glütensiz restoranları göstermek için konumunuzu kullanır."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Tarif ve restoran fotoğrafları eklemek için galerinize erişim gereklidir.",
          "cameraPermission": "Fotoğraf çekmek için kamera erişimi gereklidir."
        }
      ],
      "expo-mail-composer"
    ],
    "owner": "efegundogan",
    "privacy": "public",
    "description": "Glütensiz yaşam için kapsamlı platform. Glütensiz restoranları keşfedin, tarifleri paylaşın, kampanyaları takip edin.",
    "primaryColor": "#4CAF50",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "privacyPolicyUrl": "https://efegundogan13.github.io/glutasyon_web/docs/privacy-policy.html",
    "termsOfServiceUrl": "https://efegundogan13.github.io/glutasyon_web/docs/terms-of-service.html",
    "extra": {
      "eas": {
        "projectId": "ebe00495-193d-434e-816a-b26f356c3f3e"
      }
    }
  }
}
